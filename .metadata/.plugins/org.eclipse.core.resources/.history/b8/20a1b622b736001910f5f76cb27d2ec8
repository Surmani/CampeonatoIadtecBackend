package com.iadtec.hackathon.service;

import static org.junit.Assert.assertEquals;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.context.junit4.SpringRunner;

@RunWith(SpringRunner.class)
@SpringBootTest
public class PaisServiceTests {
	
	@Autowired 
	private PaisService paisService;
	
	@Test
	public void contextLoads() {
	}

	@Test 
	public void createPais() {
		Pais savedPais = paisService.create(getPais());
		Pais userFromDb = paisService.findByNome("Ucrânia");
		assertEquals("Ucrânia", userFromDb.getNome());
	}
	
	private Pais getPais() {
		Pais pais = new Pais((long)10,"Ucrânia");
		return pais;
	}

	@Test 
	public void deletePais() {
		Pais userFromDb = paisService.findByNome("Ucrânia");
		assertEquals("Ucrânia", userFromDb.getNome());
		paisService.delete(10);
		userFromDb = paisService.findByNome("Ucrânia");
		assertEquals(null, userFromDb);
		
	}
	
}
