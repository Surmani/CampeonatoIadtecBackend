package com.iadtec.hackathon.cliente;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;

public class EstadoService {
	
	@Autowired
    private JdbcTemplate jtm;

    public List<Cliente> findAll() {

    	String sql = "SELECT * FROM ESTADO";
        List<Cliente> estados = jtm.query(sql, new BeanPropertyRowMapper(Cliente.class));

        return estados;
    }

    public Cliente findById(Long id) {

        String sql = "SELECT * FROM ESTADO WHERE ID=?";

        Cliente estado = (Cliente) jtm.queryForObject(sql, new Object[]{id}, new BeanPropertyRowMapper(Cliente.class));

        return estado;
    }
}
