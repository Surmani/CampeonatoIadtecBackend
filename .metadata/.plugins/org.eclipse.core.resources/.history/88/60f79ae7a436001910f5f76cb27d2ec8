package com.iadtec.hackathon.estado;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;

public class EstadoService {
	
	@Autowired
    private JdbcTemplate jtm;

    public List<Estado> findAll() {

    	String sql = "SELECT * FROM ESTADO";
        List<Estado> estados = jtm.query(sql, new BeanPropertyRowMapper(Estado.class));

        return estados;
    }

    public Estado findById(Long id) {

        String sql = "SELECT * FROM ESTADO WHERE ID=?";

        Estado estado = (Estado) jtm.queryForObject(sql, new Object[]{id}, new BeanPropertyRowMapper(Estado.class));

        return estado;
    }
}
