CREATE TABLE PAIS(ID BIGINT PRIMARY KEY AUTO_INCREMENT, 
                  NOME VARCHAR(30));

CREATE TABLE ESTADO(ID BIGINT PRIMARY KEY AUTO_INCREMENT, 
                  NOME VARCHAR(30), UF VARCHAR(2), PAIS INT, FOREIGN KEY (PAIS) REFERENCES PAIS(ID));

CREATE TABLE CLIENTE(ID BIGINT PRIMARY KEY AUTO_INCREMENT, 
                  NOME VARCHAR(30), CPF VARCHAR(14), DATANASCIMENTO DATE, EMAIL VARCHAR(30), SITUACAO VARCHAR(10), ESTADO INT, FOREIGN KEY (ESTADO) REFERENCES ESTADO(ID));
